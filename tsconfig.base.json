{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": ["apps/bot-client/src/*"],
      "@father/*": ["apps/botfather/src/*"],
      "@core/types/*": ["libs/core/src/types/*"],
      "@core/functions/*": ["libs/core/src/functions/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
